<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>  

<body>
    
    <%- include('../partials/author.ejs') %>  

    <div class="container" style="margin-top: 70px; margin-bottom: 130px;">
        <h1 style="text-align: center;">Welcome back: <%- username %> </h1>

        <div class="create-form">
            <h2>Create  blog</h2>
            <form action="/author/<%- option %>" method="post">
                <div class="form-group">
                    <label for="exampleFormControlInput1" >user id</label>
                    <input type="text" class="form-control" style="text-transform: uppercase;" id="exampleFormControlInput1" placeholder=" user id " name="userid">
                  </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1" >Blog Heading</label>
                    <input type="text" class="form-control" style="text-transform: uppercase;" id="exampleFormControlInput1" placeholder="Blog heading" name="heading">
                  </div>
                  <div class="form-group">
                    <label for="exampleFormControlTextarea1">Content</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" name="content"></textarea>
                  </div>
                  <div class="media">
                    <div class="container my-4">
                      <!--Grid row-->
                      <div class="row text-center">
                          <!--Grid column-->
                          <div class="col-md-6 mb-4">
                              <div class="file-field">
                              <div class="d-flex justify-content-center">
                                  <div class="btn btn-mdb-color btn-rounded float-left">
                                  <span>Choose Image</span>
                                  <input type="file"  name="image">
                                  <!-- <input type="file" name="file" name="media"> -->
                                  </div>
                                  
                              </div>
                              </div>
                              <div class="file-field">
                                <div class="d-flex justify-content-center">
                                    <div class="btn btn-mdb-color btn-rounded float-left">
                                    <span>Additional multimedia</span>
                                    <input type="file"  name="multimedia">
                                    <!-- <input type="file" name="file" name="media"> -->
                                    </div>
                                    
                                </div>
                                </div>
                              </div>
                      </div>
                    </div>
                    <div class="container my-4">
                      <!--Grid row-->
                     
                  </div>
                  
                  </div>
                  <div class="form-group">
                    <label for="exampleFormControlSelect1">Example select</label>
                    <select class="form-control" id="exampleFormControlSelect1" name="view_option">
                      <option select style="text-transform: capitalize;" value="<%- option %>"><%- option %></option>
                      
                    </select>
                  </div>
                    <button type="submit" class="btn btn-dark" name="createBlog">Create</button>
               </form>
       
             </div>
    
    
        </div>

       
    </div>



    <%- include('../partials/footer.ejs') %>  
</body>
</html>